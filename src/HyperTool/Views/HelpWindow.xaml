            </StackPanel>
        </ScrollViewer>

        <WrapPanel Grid.Row="1" Margin="0,12,0,0" HorizontalAlignment="Right">
            <Button Padding="12,6" Click="CloseButton_Click" Content="OK" />
        </WrapPanel>
    </Grid>
</mah:MetroWindow>
