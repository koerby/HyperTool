                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="1) VM auswÃ¤hlen" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Oben im Header werden alle Hyper-V VMs als Chips angezeigt. Klick auf einen Chip wÃ¤hlt die VM als aktive Arbeits-VM fÃ¼r Start/Network/Snaps." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="2) Start / Stop / Konsole" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Im Tab 'Start' kannst du VM starten, stoppen, hart ausschalten, neu starten und die VM-Konsole Ã¶ffnen." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="3) Network / Switches" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Im Tab 'Network' werden Hyper-V Switches geladen. Danach kannst du die ausgewÃ¤hlte VM verbinden oder trennen. Default Connect nutzt den in der Config hinterlegten Default Switch." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="4) Snapshots / Checkpoints" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Im Tab 'Snaps' kannst du Checkpoints erstellen, anwenden und lÃ¶schen. Ã„nderungen wirken auf die aktuell ausgewÃ¤hlte VM." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="5) HNS Restart (UAC)" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Im Config-Tab kann ein HNS-Neustart mit UAC ausgelÃ¶st werden. AbhÃ¤ngig von Windows-Rechten erscheint dabei eine Administrator-Abfrage." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="6) Tray Funktionen" />
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="Wenn aktiv, bietet das Tray-MenÃ¼ Schnellzugriffe fÃ¼r Start/Stop/Konsole/Snapshot/Switch ohne das Hauptfenster zu Ã¶ffnen." />
                    </StackPanel>
                </Border>

                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10" Background="{DynamicResource OverlayBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Schnellzugriffe" />
                        <WrapPanel Margin="0,8,0,0">
                            <Button Style="{StaticResource HelpQuickActionButtonStyle}" Click="OpenLogsButton_Click" Content="ðŸ“„ Logs Ã¶ffnen" />
                            <Button Style="{StaticResource HelpQuickActionButtonStyle}" Click="OpenConfigButton_Click" Content="âš™ Config Ã¶ffnen" />
                            <Button Margin="0" Style="{StaticResource HelpQuickActionButtonStyle}" Click="OpenRepoButton_Click" Content="ðŸŒ GitHub Repo" />
                        </WrapPanel>
