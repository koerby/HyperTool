<mah:MetroWindow x:Class="HyperTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="1080"
        Height="760"
        MinWidth="900"
        MinHeight="620"
        WindowStartupLocation="CenterScreen"
        Background="#FF111827">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="16"
                CornerRadius="10"
                Background="#FF1F2937"
                BorderThickness="1"
                BorderBrush="#FF374151">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#FFF9FAFB"
                               Text="HyperTool" />
                    <TextBlock Margin="0,6,0,0"
                               Foreground="#FFD1D5DB"
                               Text="Schritt 6: Config-Editor + HNS-Flow" />
                </StackPanel>

                <Border Grid.Column="1"
                        Padding="10,6"
                        CornerRadius="6"
                        VerticalAlignment="Center"
                        Background="#FF0F766E">
                    <TextBlock Foreground="White"
                               FontWeight="SemiBold"
                               Text="{Binding StatusText}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Padding="12"
                CornerRadius="8"
                Background="#FF7C2D12"
                BorderThickness="1"
                BorderBrush="#FF9A3412"
                Visibility="{Binding HasConfigurationNotice, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Foreground="#FFFFEDD5"
                       TextWrapping="Wrap"
                       Text="{Binding ConfigurationNotice}" />
        </Border>

        <Border Grid.Row="4"
                Padding="16"
                CornerRadius="10"
                Background="#FF1F2937"
                BorderThickness="1"
                BorderBrush="#FF374151">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="290" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="VM:" />

                    <ComboBox Grid.Column="2"
                              DisplayMemberPath="Label"
                              SelectedItem="{Binding SelectedVm}"
                              ItemsSource="{Binding AvailableVms}" />

                    <TextBlock Grid.Column="4"
                               VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="State" />

                    <TextBlock Grid.Column="6"
                               VerticalAlignment="Center"
                               Foreground="#FFD1D5DB"
                               Text="{Binding SelectedVmState}" />

                    <TextBlock Grid.Column="8"
                               VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="Switch" />

                    <TextBlock Grid.Column="10"
                               VerticalAlignment="Center"
                               Foreground="#FFD1D5DB"
                               Text="{Binding SelectedVmCurrentSwitch}" />
                </Grid>

                <TabControl Margin="0,14,0,0">
                    <TabItem Header="Start/Console">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="14" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Padding="12,8"
                                    Command="{Binding StartSelectedVmCommand}"
                                    Content="Start VM" />
                            <Button Grid.Row="0" Grid.Column="1"
                                    Margin="0,0,10,0"
                                    Padding="12,8"
                                    Command="{Binding StopSelectedVmCommand}"
                                    Content="Stop VM (graceful)" />
                            <Button Grid.Row="0" Grid.Column="2"
                                    Padding="12,8"
                                    Command="{Binding TurnOffSelectedVmCommand}"
                                    Content="Turn Off (hard)" />

                            <Button Grid.Row="2" Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Padding="12,8"
                                    Command="{Binding RestartSelectedVmCommand}"
                                    Content="Restart VM" />
                            <Button Grid.Row="2" Grid.Column="1"
                                    Margin="0,0,10,0"
                                    Padding="12,8"
                                    Command="{Binding OpenConsoleCommand}"
                                    Content="Open Console" />
                            <Button Grid.Row="2" Grid.Column="2"
                                    Padding="12,8"
                                    Command="{Binding RefreshVmStatusCommand}"
                                    Content="Refresh Status" />
                        </Grid>
                    </TabItem>

                    <TabItem Header="Network">
                        <StackPanel Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Foreground="#FFF9FAFB"
                                           FontWeight="SemiBold"
                                           Text="Switch:" />

                                <ComboBox Grid.Column="1"
                                          Margin="8,0"
                                          DisplayMemberPath="Name"
                                          SelectedItem="{Binding SelectedSwitch}"
                                          ItemsSource="{Binding AvailableSwitches}" />

                                <Button Grid.Column="2"
                                        Padding="12,8"
                                        Command="{Binding LoadSwitchesCommand}"
                                        Content="Refresh Switches" />
                            </Grid>

                            <WrapPanel Margin="0,14,0,0">
                                <Button Margin="0,0,12,12"
                                        Padding="12,8"
                                        Command="{Binding ConnectSelectedSwitchCommand}"
                                        Content="Connect to Switch" />
                                <Button Margin="0,0,12,12"
                                        Padding="12,8"
                                        Command="{Binding DisconnectSwitchCommand}"
                                        Content="Disconnect" />
                                <Button Margin="0,0,12,12"
                                        Padding="12,8"
                                        Command="{Binding ConnectDefaultVmCommand}"
                                        Content="Connect Default Switch" />
                            </WrapPanel>

                            <TextBlock Foreground="#FFD1D5DB"
                                       Text="{Binding DefaultSwitchName, StringFormat=Default Switch: {0}}" />
                            <TextBlock Foreground="#FFD1D5DB"
                                       Text="{Binding VmConnectComputerName, StringFormat=vmconnect host: {0}}" />
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Snapshots">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ListBox Grid.Row="0"
                                     SelectedItem="{Binding SelectedCheckpoint}"
                                     ItemsSource="{Binding AvailableCheckpoints}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="170" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Foreground="#FFF9FAFB"
                                                       Text="{Binding Name}" />
                                            <TextBlock Grid.Column="1"
                                                       Foreground="#FFD1D5DB"
                                                       Text="{Binding Created, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                            <TextBlock Grid.Column="2"
                                                       Foreground="#FFD1D5DB"
                                                       Text="{Binding Type}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Foreground="#FFF9FAFB"
                                               FontWeight="SemiBold"
                                               Text="Checkpoint Name" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding NewCheckpointName, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="3"
                                            Padding="12,8"
                                            Command="{Binding CreateCheckpointCommand}"
                                            Content="Create Checkpoint" />
                                </Grid>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Foreground="#FFF9FAFB"
                                               FontWeight="SemiBold"
                                               Text="Beschreibung (optional)" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding NewCheckpointDescription, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="3"
                                            Padding="12,8"
                                            Command="{Binding ApplyCheckpointCommand}"
                                            Content="Apply Checkpoint" />
                                    <Button Grid.Column="5"
                                            Padding="12,8"
                                            Command="{Binding DeleteCheckpointCommand}"
                                            Content="Delete Checkpoint" />
                                </Grid>

                                <WrapPanel Margin="0,10,0,0">
                                    <Button Margin="0,0,12,0"
                                            Padding="12,8"
                                            Command="{Binding LoadCheckpointsCommand}"
                                            Content="Refresh Checkpoints" />
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Config">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="160" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Foreground="#FFF9FAFB"
                                           FontWeight="SemiBold"
                                           Text="Default VM" />
                                <ComboBox Grid.Column="1"
                                          DisplayMemberPath="Label"
                                          ItemsSource="{Binding AvailableVms}"
                                          SelectedItem="{Binding SelectedDefaultVmForConfig}" />
                                <Button Grid.Column="3"
                                        Padding="12,8"
                                        Command="{Binding SetDefaultVmCommand}"
                                        Content="Setze Default" />
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <ListBox Grid.Column="0"
                                         SelectedItem="{Binding SelectedVmForConfig}"
                                         ItemsSource="{Binding AvailableVms}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="220" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Foreground="#FFF9FAFB" Text="{Binding Name}" />
                                                <TextBlock Grid.Column="1" Foreground="#FFD1D5DB" Text="{Binding Label}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Column="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FFF9FAFB"
                                                   FontWeight="SemiBold"
                                                   Text="Neue VM Name" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding NewVmName, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FFF9FAFB"
                                                   FontWeight="SemiBold"
                                                   Text="Label" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding NewVmLabel, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>

                                    <WrapPanel Margin="0,12,0,0">
                                        <Button Margin="0,0,12,0"
                                                Padding="12,8"
                                                Command="{Binding AddVmCommand}"
                                                Content="VM hinzufügen" />
                                        <Button Margin="0,0,12,0"
                                                Padding="12,8"
                                                Command="{Binding RemoveVmCommand}"
                                                Content="Auswahl entfernen" />
                                    </WrapPanel>

                                    <GroupBox Margin="0,14,0,0" Header="HNS">
                                        <StackPanel Margin="8">
                                            <CheckBox Margin="0,0,0,6"
                                                      IsChecked="{Binding HnsEnabled}"
                                                      Content="HNS-Flow aktivieren" />
                                            <CheckBox Margin="0,0,0,6"
                                                      IsChecked="{Binding HnsAutoRestartAfterDefaultSwitch}"
                                                      Content="Auto-Restart nach Default-Switch Connect" />
                                            <CheckBox Margin="0,0,0,10"
                                                      IsChecked="{Binding HnsAutoRestartAfterAnyConnect}"
                                                      Content="Auto-Restart nach jedem Connect" />
                                            <Button Padding="12,8"
                                                    Command="{Binding RestartHnsCommand}"
                                                    Content="HNS jetzt neu starten (UAC)" />
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                            </Grid>

                            <WrapPanel Grid.Row="4">
                                <Button Margin="0,0,12,0"
                                        Padding="12,8"
                                        Command="{Binding SaveConfigCommand}"
                                        Content="Config speichern" />
                                <Button Margin="0,0,12,0"
                                    Padding="12,8"
                                    Command="{Binding ReloadConfigCommand}"
                                    Content="Neu laden" />
                                <TextBlock VerticalAlignment="Center"
                                           Foreground="#FFD1D5DB"
                                           Text="Standarddatei: HyperTool.config.json" />
                            </WrapPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>

        <Border Grid.Row="6"
                Padding="12"
                CornerRadius="10"
                Background="#FF1F2937"
                BorderThickness="1"
                BorderBrush="#FF374151">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="Notifications" />
                    <TextBlock Margin="10,0,0,0"
                               Foreground="#FFD1D5DB"
                               Text="(non-blocking)" />
                    <mah:ProgressRing Margin="16,0,0,0"
                                      Width="16"
                                      Height="16"
                                      IsActive="{Binding IsBusy}"
                                      Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Margin="8,0,0,0"
                               Foreground="#FFD1D5DB"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding BusyText}" />
                </StackPanel>

                <ListBox Grid.Row="2"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding Notifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="#FF9CA3AF"
                                           Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                                <TextBlock Grid.Column="1"
                                           Foreground="#FFD1D5DB"
                                           Text="{Binding Level}" />
                                <TextBlock Grid.Column="2"
                                           Foreground="#FFF9FAFB"
                                           TextWrapping="Wrap"
                                           Text="{Binding Message}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StatusBar Grid.Row="8"
                   Margin="0,16,0,0"
                   Background="#FF1F2937"
                   Foreground="#FFD1D5DB">
            <StatusBarItem>
                <TextBlock Text="Tray Icon aktiv · Doppelklick zeigt das Fenster · Schritt 6 aktiv" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
