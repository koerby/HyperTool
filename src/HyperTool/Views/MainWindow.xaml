<mah:MetroWindow x:Class="HyperTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Icon="/Assets/HyperTool.ico"
        Width="1300"
        Height="920"
        MinWidth="1040"
        MinHeight="760"
        WindowStartupLocation="CenterScreen"
        Background="#0B1220">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <SolidColorBrush x:Key="PageBackground" Color="#0A1220" />
        <SolidColorBrush x:Key="PanelBackground" Color="#141E32" />
        <SolidColorBrush x:Key="PanelBorder" Color="#2D4265" />
        <SolidColorBrush x:Key="TextPrimary" Color="#F8FAFF" />
        <SolidColorBrush x:Key="TextMuted" Color="#B9C8E6" />
        <SolidColorBrush x:Key="Accent" Color="#39C3FF" />
        <SolidColorBrush x:Key="AccentStrong" Color="#1DA7E5" />

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Background" Value="{StaticResource PanelBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#264A76" />
            <Setter Property="BorderBrush" Value="#4370A6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style x:Key="ReadableComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111A2C" />
            <Setter Property="Padding" Value="10,6" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#2B5E8D" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource Accent}" />
                    <Setter Property="Foreground" Value="#041321" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ReadableComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111A2C" />
            <Setter Property="BorderBrush" Value="#4D74A5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ReadableComboBoxItemStyle}" />
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#111A2C" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#FFFFFF" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#39C3FF" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#041321" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#111A2C" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#FFFFFF" />
            </Style.Resources>
        </Style>

        <Style x:Key="ReadableTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111A2C" />
            <Setter Property="BorderBrush" Value="#4D74A5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style x:Key="ReadableListBoxStyle" TargetType="ListBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111A2C" />
            <Setter Property="BorderBrush" Value="#36547E" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ReadableListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#274B72" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource Accent}" />
                    <Setter Property="Foreground" Value="#041321" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HiddenTabControlStyle" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <ContentPresenter ContentSource="SelectedContent" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="NavListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="NavBorder"
                                CornerRadius="10"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                Padding="10">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="#1F3555" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="#2E507C" />
                                <Setter TargetName="NavBorder" Property="BorderBrush" Value="{StaticResource Accent}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="18" Background="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
            <RowDefinition Height="12" />
            <RowDefinition Height="220" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Foreground="{StaticResource TextPrimary}" FontSize="24" FontWeight="SemiBold" Text="HyperTool" />
                    <TextBlock Margin="0,4,0,0" Foreground="{StaticResource TextMuted}" Text="dein nÃ¼tzlicher Hyper V Helfer" />
                </StackPanel>

                <Border Grid.Column="1" Padding="10,6" CornerRadius="8" Background="{StaticResource AccentStrong}">
                    <TextBlock Foreground="White" FontWeight="SemiBold" Text="{Binding StatusText}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Style="{StaticResource CardBorder}"
                Padding="10"
                Visibility="{Binding HasConfigurationNotice, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Foreground="#FFEEC9A6" TextWrapping="Wrap" Text="{Binding ConfigurationNotice}" />
        </Border>

        <Border Grid.Row="4" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="88" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="12" Background="#10192B" BorderBrush="#2D4265" BorderThickness="1" Padding="8">
                    <ListBox Style="{StaticResource NavListBoxStyle}"
                             ItemContainerStyle="{StaticResource NavListBoxItemStyle}"
                             SelectedIndex="{Binding SelectedMenuIndex, Mode=TwoWay}">
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â–¶" Foreground="{StaticResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Start" Foreground="{StaticResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â‡†" Foreground="{StaticResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Network" Foreground="{StaticResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â—·" Foreground="{StaticResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Snaps" Foreground="{StaticResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="âš™" Foreground="{StaticResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Config" Foreground="{StaticResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â“˜" Foreground="{StaticResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Info" Foreground="{StaticResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Border>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="12" Background="#10192B" BorderBrush="#2D4265" BorderThickness="1" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="54" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="54" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="VM" />
                            <ComboBox Grid.Column="2"
                                      Style="{StaticResource ReadableComboBoxStyle}"
                                      DisplayMemberPath="Label"
                                      SelectedItem="{Binding SelectedVm}"
                                      ItemsSource="{Binding AvailableVms}" />

                            <TextBlock Grid.Column="4" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="State" />
                            <TextBlock Grid.Column="6" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}" Text="{Binding SelectedVmState}" />

                            <TextBlock Grid.Column="8" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Switch" />
                            <TextBlock Grid.Column="10" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}" Text="{Binding SelectedVmCurrentSwitch}" />
                        </Grid>
                    </Border>

                    <TabControl Grid.Row="2"
                                Style="{StaticResource HiddenTabControlStyle}"
                                SelectedIndex="{Binding SelectedMenuIndex, Mode=TwoWay}">
                        <TabItem Header="Start">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource ActionButton}" Command="{Binding StartSelectedVmCommand}" Content="â–¶ Start VM" />
                                <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource ActionButton}" Command="{Binding StopSelectedVmCommand}" Content="â–  Stop VM" />
                                <Button Grid.Row="0" Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding TurnOffSelectedVmCommand}" Content="â» Hard Off" />

                                <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource ActionButton}" Command="{Binding RestartSelectedVmCommand}" Content="â†» Restart" />
                                <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource ActionButton}" Command="{Binding OpenConsoleCommand}" Content="ðŸ–¥ Open Console" />
                                <Button Grid.Row="2" Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RefreshVmStatusCommand}" Content="âŸ³ Refresh" />
                            </Grid>
                        </TabItem>

                        <TabItem Header="Network">
                            <StackPanel Margin="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="170" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Switch" />
                                    <ComboBox Grid.Column="1"
                                              Style="{StaticResource ReadableComboBoxStyle}"
                                              Margin="8,0"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedSwitch}"
                                              ItemsSource="{Binding AvailableSwitches}" />
                                    <Button Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding LoadSwitchesCommand}" Content="âŸ³ Refresh Switches" />
                                </Grid>

                                <WrapPanel Margin="0,12,0,0">
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,10,10" Command="{Binding ConnectSelectedSwitchCommand}" Content="ðŸ”Œ Connect" />
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,10,10" Command="{Binding DisconnectSwitchCommand}" Content="â›” Disconnect" />
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,0,10" Command="{Binding ConnectDefaultVmCommand}" Content="âš¡ Default Connect" />
                                </WrapPanel>

                                <TextBlock Foreground="{StaticResource TextMuted}" Text="{Binding DefaultSwitchName, StringFormat=Default Switch: {0}}" />
                                <TextBlock Margin="0,4,0,0" Foreground="{StaticResource TextMuted}" Text="{Binding VmConnectComputerName, StringFormat=vmconnect host: {0}}" />
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="Snapshots">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ListBox Grid.Row="0"
                                         Style="{StaticResource ReadableListBoxStyle}"
                                         ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                                         SelectedItem="{Binding SelectedCheckpoint}"
                                         ItemsSource="{Binding AvailableCheckpoints}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="260" />
                                                    <ColumnDefinition Width="170" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Foreground="White" Text="{Binding Name}" />
                                                <TextBlock Grid.Column="1" Foreground="{StaticResource TextMuted}" Text="{Binding Created, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                                <TextBlock Grid.Column="2" Foreground="{StaticResource TextMuted}" Text="{Binding Type}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Row="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Checkpoint Name" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewCheckpointName, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="3" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding CreateCheckpointCommand}" Content="ðŸ“¸ Create" />
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="160" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="160" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Beschreibung" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewCheckpointDescription, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="3" Style="{StaticResource ActionButton}" Command="{Binding ApplyCheckpointCommand}" Content="âœ… Apply" />
                                        <Button Grid.Column="5" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding DeleteCheckpointCommand}" Content="ðŸ—‘ Delete" />
                                    </Grid>

                                    <WrapPanel Margin="0,10,0,0">
                                        <Button Style="{StaticResource ActionButton}" Margin="0" Command="{Binding LoadCheckpointsCommand}" Content="âŸ³ Refresh Checkpoints" />
                                    </WrapPanel>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Config">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Default VM" />
                                        <ComboBox Grid.Column="1" Style="{StaticResource ReadableComboBoxStyle}" DisplayMemberPath="Label" ItemsSource="{Binding AvailableVms}" SelectedItem="{Binding SelectedDefaultVmForConfig}" />
                                        <Button Grid.Column="3" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding SetDefaultVmCommand}" Content="â­ Setze Default" />
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>

                                        <ListBox Grid.Column="0"
                                                 Style="{StaticResource ReadableListBoxStyle}"
                                                 ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                                                 SelectedItem="{Binding SelectedVmForConfig}"
                                                 ItemsSource="{Binding AvailableVms}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,2,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="220" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Foreground="White" Text="{Binding Name}" />
                                                        <TextBlock Grid.Column="1" Foreground="{StaticResource TextMuted}" Text="{Binding Label}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <StackPanel Grid.Column="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Neue VM Name" />
                                                <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewVmName, UpdateSourceTrigger=PropertyChanged}" />
                                            </Grid>

                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Label" />
                                                <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewVmLabel, UpdateSourceTrigger=PropertyChanged}" />
                                            </Grid>

                                            <WrapPanel Margin="0,12,0,0">
                                                <Button Style="{StaticResource ActionButton}" Command="{Binding AddVmCommand}" Content="ï¼‹ VM hinzufÃ¼gen" />
                                                <Button Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RemoveVmCommand}" Content="ï¼ Entfernen" />
                                            </WrapPanel>

                                            <GroupBox Margin="0,14,0,0" Header="HNS" Foreground="{StaticResource TextPrimary}" BorderBrush="#36547E">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,6" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding HnsEnabled}" Content="HNS-Flow aktivieren" />
                                                    <CheckBox Margin="0,0,0,6" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding HnsAutoRestartAfterDefaultSwitch}" Content="Auto-Restart nach Default-Switch Connect" />
                                                    <CheckBox Margin="0,0,0,10" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding HnsAutoRestartAfterAnyConnect}" Content="Auto-Restart nach jedem Connect" />
                                                    <Button Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RestartHnsCommand}" Content="âš™ HNS neu starten" />
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Margin="0,14,0,0" Header="System" Foreground="{StaticResource TextPrimary}" BorderBrush="#36547E">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,8" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding UiEnableTrayIcon}" Content="Tasktray-Icon aktiv" />
                                                    <CheckBox Margin="0,0,0,8" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding UiStartWithWindows}" Content="Mit Windows starten" />
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Margin="0,14,0,0" Header="Updates" Foreground="{StaticResource TextPrimary}" BorderBrush="#36547E">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,8" Foreground="{StaticResource TextPrimary}" IsChecked="{Binding UpdateCheckOnStartup}" Content="Beim Start auf Updates prÃ¼fen" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" Text="GitHub Owner" />
                                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding GithubOwner, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Margin="0,8,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" Text="GitHub Repo" />
                                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding GithubRepo, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>
                                    </Grid>

                                    <WrapPanel Grid.Row="4">
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding SaveConfigCommand}" Content="ðŸ’¾ Speichern" />
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding ReloadConfigCommand}" Content="âŸ³ Neu laden" />
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextMuted}" Text="Standarddatei: HyperTool.config.json" />
                                    </WrapPanel>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Info">
                            <StackPanel Margin="4">
                                <TextBlock Foreground="{StaticResource TextPrimary}" FontSize="18" FontWeight="SemiBold" Text="HyperTool" />
                                <TextBlock Margin="0,4,0,0" Foreground="{StaticResource TextMuted}" Text="dein nÃ¼tzlicher Hyper V Helfer" />
                                <TextBlock Margin="0,12,0,0" Foreground="{StaticResource TextMuted}" Text="{Binding AppVersion, StringFormat=Version: {0}}" />
                                <TextBlock Margin="0,6,0,12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap" Text="{Binding UpdateStatus, StringFormat=Update-Status: {0}}" />
                                <WrapPanel>
                                    <Button Style="{StaticResource ActionButton}" Command="{Binding CheckForUpdatesCommand}" Content="ðŸ›° Update prÃ¼fen" />
                                    <Button Margin="0" Style="{StaticResource ActionButton}" Command="{Binding OpenReleasePageCommand}" Content="ðŸŒ Release Ã¶ffnen" />
                                </WrapPanel>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="6" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Text="Notifications" />
                    <TextBlock Margin="10,0,0,0" Foreground="{StaticResource TextMuted}" Text="(non-blocking)" />
                    <mah:ProgressRing Margin="16,0,0,0"
                                      Width="16"
                                      Height="16"
                                      IsActive="{Binding IsBusy}"
                                      Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Margin="8,0,0,0"
                               Foreground="{StaticResource TextMuted}"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding BusyText}" />
                </StackPanel>

                <ListBox Grid.Row="2"
                         Style="{StaticResource ReadableListBoxStyle}"
                         ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                         ItemsSource="{Binding Notifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="#9DB0CF" Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                                <TextBlock Grid.Column="1" Foreground="#BED2F0" Text="{Binding Level}" />
                                <TextBlock Grid.Column="2" Foreground="White" TextWrapping="Wrap" Text="{Binding Message}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StatusBar Grid.Row="8" Background="{StaticResource PanelBackground}" Foreground="{StaticResource TextMuted}">
            <StatusBarItem>
                <TextBlock Text="HyperTool Â· Sidebar Navigation aktiv Â· UI Refresh" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
