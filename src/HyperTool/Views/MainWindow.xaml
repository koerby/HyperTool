<mah:MetroWindow x:Class="HyperTool.Views.MainWindow"
    x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:conv="clr-namespace:HyperTool.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Icon="/Assets/HyperTool.ico"
        Width="1300"
        Height="920"
        MinWidth="1040"
        MinHeight="760"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PageBackground}">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:StringEqualsConverter x:Key="StringEqualsConverter" />

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Background" Value="{DynamicResource PanelBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorder}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style x:Key="ReadableComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="Background" Value="{DynamicResource InputBackground}" />
            <Setter Property="Padding" Value="10,6" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource NavHoverBackground}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Accent}" />
                    <Setter Property="Foreground" Value="{DynamicResource AccentText}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ReadableComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="Background" Value="{DynamicResource InputBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="TextElement.Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ReadableComboBoxItemStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="ComboBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8" />

                            <Grid>
                                <ContentPresenter Margin="10,0,36,0"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"
                                                  Content="{TemplateBinding SelectionBoxItem}" />
                                <ToggleButton x:Name="DropDownToggle"
                                              Width="30"
                                              HorizontalAlignment="Right"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                    <TextBlock Text="â–¼"
                                               Foreground="{DynamicResource TextPrimary}"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </ToggleButton>
                            </Grid>

                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide"
                                   StaysOpen="False">
                                <Border Background="{DynamicResource InputBackground}"
                                    BorderBrush="{DynamicResource InputBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer MaxHeight="320" CanContentScroll="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReadableTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="Background" Value="{DynamicResource InputBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style x:Key="ReadableListBoxStyle" TargetType="ListBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="Background" Value="{DynamicResource InputBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ReadableListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource NavHoverBackground}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Accent}" />
                    <Setter Property="Foreground" Value="{DynamicResource AccentText}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HiddenTabControlStyle" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <ContentPresenter ContentSource="SelectedContent" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="NavListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="NavBorder"
                                CornerRadius="10"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                Padding="10">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="{DynamicResource NavHoverBackground}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="{DynamicResource NavSelectedBackground}" />
                                <Setter TargetName="NavBorder" Property="BorderBrush" Value="{DynamicResource Accent}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="18" Background="{DynamicResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
            <RowDefinition Height="12" />
            <RowDefinition Height="220" />
            <RowDefinition Height="0" />
            <RowDefinition Height="0" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Foreground="{DynamicResource TextPrimary}" FontSize="24" FontWeight="SemiBold" Text="HyperTool" />
                    <TextBlock Margin="0,4,0,0" Foreground="{DynamicResource TextMuted}" Text="dein nÃ¼tzlicher Hyper V Helfer" />

                    <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding AvailableVms}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="0,0,8,8"
                                        Padding="10,6"
                                        Command="{Binding DataContext.SelectVmFromChipCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="â–¶ Start"
                                                      Command="{Binding DataContext.StartVmByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="â–  Stop"
                                                      Command="{Binding DataContext.StopVmByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="â» Hard Off"
                                                      Command="{Binding DataContext.TurnOffVmByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="â†» Restart"
                                                      Command="{Binding DataContext.RestartVmByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <Separator />
                                            <MenuItem Header="ðŸ–¥ Open Console"
                                                      Command="{Binding DataContext.OpenConsoleByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="ðŸ“¸ Snapshot"
                                                      Command="{Binding DataContext.CreateSnapshotByNameCommand, Source={x:Reference RootWindow}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext.Name, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                            <Setter Property="Background" Value="{DynamicResource VmChipBaseBackground}" />
                                            <Setter Property="BorderBrush" Value="{DynamicResource VmChipBaseBorder}" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RuntimeState}" Value="Running">
                                                    <Setter Property="Background" Value="{DynamicResource VmChipRunningBackground}" />
                                                    <Setter Property="BorderBrush" Value="{DynamicResource VmChipRunningBorder}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RuntimeState}" Value="Off">
                                                    <Setter Property="Background" Value="{DynamicResource VmChipOffBackground}" />
                                                    <Setter Property="BorderBrush" Value="{DynamicResource VmChipOffBorder}" />
                                                </DataTrigger>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource StringEqualsConverter}">
                                                            <Binding Path="Name" />
                                                            <Binding Path="DataContext.SelectedVm.Name" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource VmChipSelectedBorder}" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" Text="â—" />
                                        <TextBlock Margin="6,0,0,0" Foreground="{DynamicResource TextPrimary}" Text="{Binding DisplayLabel}" />
                                        <TextBlock Margin="8,0,0,0" Foreground="{DynamicResource TextMuted}" Text="|" />
                                        <TextBlock Margin="6,0,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding RuntimeState}" />
                                        <TextBlock Margin="8,0,0,0" Foreground="{DynamicResource TextMuted}" Text="|" />
                                        <TextBlock Margin="6,0,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding RuntimeSwitchName}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Margin="16,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <Button Style="{StaticResource ActionButton}"
                            Margin="0,0,0,8"
                            Padding="10,4"
                            Click="HelpButton_Click"
                            Content="â” Hilfe"
                            ToolTip="Hilfe Ã¶ffnen" />

                    <Border Padding="8"
                            CornerRadius="10"
                            Background="{DynamicResource OverlayBackground}"
                            BorderBrush="{DynamicResource PanelBorder}"
                            BorderThickness="1">
                        <Image Source="/Assets/Logo.png"
                               Width="96"
                               Height="96"
                               Stretch="Uniform" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Style="{StaticResource CardBorder}"
                Padding="10"
                Visibility="{Binding HasConfigurationNotice, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Foreground="{DynamicResource WarningText}" TextWrapping="Wrap" Text="{Binding ConfigurationNotice}" />
        </Border>

        <Border Grid.Row="4" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="88" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="12" Background="{DynamicResource SidebarBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1" Padding="8">
                    <ListBox Style="{StaticResource NavListBoxStyle}"
                             ItemContainerStyle="{StaticResource NavListBoxItemStyle}"
                             SelectedIndex="{Binding SelectedMenuIndex, Mode=TwoWay}">
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â–¶" Foreground="{DynamicResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Start" Foreground="{DynamicResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â‡†" Foreground="{DynamicResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Network" Foreground="{DynamicResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â—·" Foreground="{DynamicResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Snaps" Foreground="{DynamicResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="âš™" Foreground="{DynamicResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Config" Foreground="{DynamicResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="â“˜" Foreground="{DynamicResource Accent}" FontSize="20" HorizontalAlignment="Center" />
                                <TextBlock Text="Info" Foreground="{DynamicResource TextMuted}" FontSize="11" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Border>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="12" Background="{DynamicResource SidebarBackground}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="240" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="54" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="54" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Selected VM" />
                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource TextMuted}" Text="{Binding SelectedVmDisplayName, Mode=OneWay}" />

                            <TextBlock Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="State" />
                            <TextBlock Grid.Column="6" VerticalAlignment="Center" Foreground="{DynamicResource TextMuted}" Text="{Binding SelectedVmState}" />

                            <TextBlock Grid.Column="8" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Switch" />
                            <TextBlock Grid.Column="10" VerticalAlignment="Center" Foreground="{DynamicResource TextMuted}" Text="{Binding SelectedVmCurrentSwitch}" />
                        </Grid>
                    </Border>

                    <TabControl Grid.Row="2"
                                Style="{StaticResource HiddenTabControlStyle}"
                                SelectedIndex="{Binding SelectedMenuIndex, Mode=TwoWay}">
                        <TabItem Header="Start">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource ActionButton}" Command="{Binding StartSelectedVmCommand}" Content="â–¶ Start VM" />
                                <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource ActionButton}" Command="{Binding StopSelectedVmCommand}" Content="â–  Stop VM" />
                                <Button Grid.Row="0" Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding TurnOffSelectedVmCommand}" Content="â» Hard Off" />

                                <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource ActionButton}" Command="{Binding RestartSelectedVmCommand}" Content="â†» Restart" />
                                <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource ActionButton}" Command="{Binding OpenConsoleCommand}" Content="ðŸ–¥ Open Console" />
                                <Button Grid.Row="2" Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RefreshVmStatusCommand}" Content="âŸ³ Refresh" />

                                <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource ActionButton}" Command="{Binding ExportSelectedVmCommand}" Content="ðŸ’¾ Export VM (Backup)" />
                                <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource ActionButton}" Command="{Binding ImportVmCommand}" Content="ðŸ“¥ Import VM" />
                            </Grid>
                        </TabItem>

                        <TabItem Header="Network">
                            <StackPanel Margin="4">
                                <TextBlock Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap">
                                    <Run Text="Selected VM: " />
                                    <Run Text="{Binding SelectedVmDisplayName, Mode=OneWay}" />
                                    <Run Text=" | State: " />
                                    <Run Text="{Binding SelectedVmState}" />
                                    <Run Text=" | Current Switch: " />
                                    <Run Text="{Binding SelectedVmCurrentSwitch}" />
                                </TextBlock>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="170" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Switch" />
                                    <ComboBox Grid.Column="1"
                                              Style="{StaticResource ReadableComboBoxStyle}"
                                              Margin="8,8,8,0"
                                              IsEnabled="{Binding AreSwitchesLoaded}"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedSwitch}"
                                              ItemsSource="{Binding AvailableSwitches}" />
                                    <Button Grid.Column="2" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RefreshSwitchesCommand}" Content="âŸ³ Refresh Switches" />
                                </Grid>

                                <TextBlock Margin="0,8,0,0"
                                           Foreground="{DynamicResource TextMuted}"
                                           TextWrapping="Wrap"
                                           Text="{Binding NetworkSwitchStatusHint}" />

                                <WrapPanel Margin="0,12,0,0">
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,10,10" Command="{Binding ConnectSelectedSwitchCommand}" Content="ðŸ”Œ Connect" />
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,10,10" Command="{Binding DisconnectSwitchCommand}" Content="â›” Disconnect" />
                                    <Button Style="{StaticResource ActionButton}" Margin="0,0,0,10" Command="{Binding ConnectDefaultVmCommand}" Content="âš¡ Default Connect" />
                                </WrapPanel>

                                <TextBlock Foreground="{DynamicResource TextMuted}" Text="{Binding DefaultSwitchName, StringFormat=Default Switch: {0}}" />
                                <TextBlock Margin="0,4,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding VmConnectComputerName, StringFormat=vmconnect host: {0}}" />
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="Snapshots">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ListBox Grid.Row="0"
                                         Style="{StaticResource ReadableListBoxStyle}"
                                         ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                                         SelectedItem="{Binding SelectedCheckpoint}"
                                         ItemsSource="{Binding AvailableCheckpoints}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="260" />
                                                    <ColumnDefinition Width="170" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Foreground="{DynamicResource TextPrimary}" Text="{Binding Name}" />
                                                <TextBlock Grid.Column="1" Foreground="{DynamicResource TextMuted}" Text="{Binding Created, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                                <TextBlock Grid.Column="2" Foreground="{DynamicResource TextMuted}" Text="{Binding Type}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Row="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Checkpoint Name" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewCheckpointName, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="3" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding CreateCheckpointCommand}" Content="ðŸ“¸ Create" />
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="160" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="160" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Beschreibung" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ReadableTextBoxStyle}" Text="{Binding NewCheckpointDescription, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="3" Style="{StaticResource ActionButton}" Command="{Binding ApplyCheckpointCommand}" Content="âœ… Restore" />
                                        <Button Grid.Column="5" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding DeleteCheckpointCommand}" Content="ðŸ—‘ Delete" />
                                    </Grid>

                                    <WrapPanel Margin="0,10,0,0">
                                        <Button Style="{StaticResource ActionButton}" Margin="0" Command="{Binding LoadCheckpointsCommand}" Content="âŸ³ Refresh Checkpoints" />
                                    </WrapPanel>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Config">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Default VM" />
                                        <ComboBox Grid.Column="1" Style="{StaticResource ReadableComboBoxStyle}" DisplayMemberPath="Label" ItemsSource="{Binding AvailableVms}" SelectedItem="{Binding SelectedDefaultVmForConfig}" />
                                        <Button Grid.Column="3" Margin="0" Style="{StaticResource ActionButton}" Command="{Binding SetDefaultVmCommand}" Content="â­ Setze Default" />
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>

                                        <ListBox Grid.Column="0"
                                                 Style="{StaticResource ReadableListBoxStyle}"
                                                 ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                                                 SelectedItem="{Binding SelectedVmForConfig}"
                                                 ItemsSource="{Binding AvailableVms}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,2,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="220" />
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Foreground="{DynamicResource TextPrimary}" Text="{Binding Name}" />
                                                        <TextBlock Grid.Column="1" Foreground="{DynamicResource TextMuted}" Text="{Binding RuntimeState}" />
                                                        <TextBlock Grid.Column="2" Foreground="{DynamicResource TextMuted}" Text="{Binding RuntimeSwitchName}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <StackPanel Grid.Column="2">
                                            <Border Style="{StaticResource CardBorder}" Padding="10" Background="{DynamicResource OverlayBackground}">
                                                <TextBlock Foreground="{DynamicResource TextMuted}"
                                                           TextWrapping="Wrap"
                                                           Text="VMs werden automatisch direkt aus Hyper-V geladen. In der Config werden keine VMs mehr fest hinterlegt." />
                                            </Border>

                                            <GroupBox Margin="0,14,0,0" Header="HNS" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource InputBorder}">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,6" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding HnsEnabled}" Content="HNS-Flow aktivieren" />
                                                    <CheckBox Margin="0,0,0,6" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding HnsAutoRestartAfterDefaultSwitch}" Content="Auto-Restart nach Default-Switch Connect" />
                                                    <CheckBox Margin="0,0,0,10" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding HnsAutoRestartAfterAnyConnect}" Content="Auto-Restart nach jedem Connect" />
                                                    <Button Margin="0" Style="{StaticResource ActionButton}" Command="{Binding RestartHnsCommand}" Content="âš™ HNS neu starten" />
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Margin="0,14,0,0" Header="System" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource InputBorder}">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,8" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding UiEnableTrayIcon}" Content="Tasktray-Icon aktiv" />
                                                    <CheckBox Margin="0,0,0,8" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding UiStartMinimized}" Content="Beim Start minimiert (nur Tray)" />
                                                    <CheckBox Margin="0,0,0,8" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding UiStartWithWindows}" Content="Mit Windows starten" />
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Text="Theme" />
                                                        <ComboBox Grid.Column="1"
                                                                  Style="{StaticResource ReadableComboBoxStyle}"
                                                                  ItemsSource="{Binding AvailableUiThemes}"
                                                                  SelectedItem="{Binding UiTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Text="VMConnect Host" />
                                                        <TextBox Grid.Column="1"
                                                                 Style="{StaticResource ReadableTextBoxStyle}"
                                                                 Text="{Binding VmConnectComputerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Margin="0,8,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="130" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Text="Backup Pfad" />
                                                        <TextBox Grid.Column="1"
                                                                 Style="{StaticResource ReadableTextBoxStyle}"
                                                                 ToolTip="Wenn gesetzt, exportiert Backup ohne Ordnerdialog in diesen Pfad."
                                                                 Text="{Binding BackupExportPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <Button Grid.Column="3"
                                                                Margin="0"
                                                                Style="{StaticResource ActionButton}"
                                                                Command="{Binding SelectBackupExportPathCommand}"
                                                                Content="ðŸ“ AuswÃ¤hlen" />
                                                    </Grid>
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Margin="0,14,0,0" Header="Updates" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource InputBorder}">
                                                <StackPanel Margin="8">
                                                    <CheckBox Margin="0,0,0,8" Foreground="{DynamicResource TextPrimary}" IsChecked="{Binding UpdateCheckOnStartup}" Content="Beim Start auf Updates prÃ¼fen" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Text="GitHub Owner" />
                                                        <TextBox Grid.Column="1"
                                                                 Style="{StaticResource ReadableTextBoxStyle}"
                                                                 IsReadOnly="True"
                                                                 IsTabStop="False"
                                                                 Text="{Binding GithubOwner}" />
                                                    </Grid>
                                                    <Grid Margin="0,8,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}" Text="GitHub Repo" />
                                                        <TextBox Grid.Column="1"
                                                                 Style="{StaticResource ReadableTextBoxStyle}"
                                                                 IsReadOnly="True"
                                                                 IsTabStop="False"
                                                                 Text="{Binding GithubRepo}" />
                                                    </Grid>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>
                                    </Grid>

                                    <WrapPanel Grid.Row="4">
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding SaveConfigCommand}" Content="ðŸ’¾ Speichern" />
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding ReloadConfigCommand}" Content="âŸ³ Neu laden" />
                                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextMuted}" Text="{Binding ConfigPath, StringFormat=Aktive Config: {0}}" />
                                    </WrapPanel>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Info">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Margin="4">
                                    <TextBlock Foreground="{DynamicResource TextPrimary}" FontSize="20" FontWeight="SemiBold" Text="Info" />
                                    <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding AppVersion, StringFormat=Version: {0}}" />
                                    <TextBlock Margin="0,2,0,12" Foreground="{DynamicResource TextMuted}" Text="{Binding UpdateStatus, StringFormat=Update-Status: {0}}" TextWrapping="Wrap" />

                                    <Border Style="{StaticResource CardBorder}" Padding="10" Background="{DynamicResource OverlayBackground}">
                                        <StackPanel>
                                            <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Projekt" />
                                            <TextBlock Margin="0,8,0,0" Foreground="{DynamicResource TextMuted}" TextWrapping="Wrap" Text="HyperTool wird Ã¼ber GitHub Releases verteilt. Hier findest du Version, Update-Status und Release-Links." />
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="0,10,0,0" Style="{StaticResource CardBorder}" Padding="10" Background="{DynamicResource OverlayBackground}">
                                        <StackPanel>
                                            <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Links" />
                                            <TextBlock Margin="0,8,0,0" Foreground="{DynamicResource TextMuted}" Text="GitHub Owner/Repo:" />
                                            <TextBlock Margin="0,2,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding GithubOwner}" />
                                            <TextBlock Margin="0,2,0,0" Foreground="{DynamicResource TextMuted}" Text="{Binding GithubRepo}" />
                                        </StackPanel>
                                    </Border>

                                    <WrapPanel Margin="0,12,0,0">
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding CheckForUpdatesCommand}" Content="ðŸ›° Update prÃ¼fen" />
                                        <Button Style="{StaticResource ActionButton}" Command="{Binding InstallUpdateCommand}" Content="â¬‡ Update installieren" />
                                        <Button Margin="0" Style="{StaticResource ActionButton}" Command="{Binding OpenReleasePageCommand}" Content="ðŸŒ Changelog / Release" />
                                    </WrapPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="6" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" Text="Notifications" />
                        <mah:ProgressRing Margin="12,0,0,0"
                                          Width="16"
                                          Height="16"
                                          IsActive="{Binding IsBusy}"
                                          Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <TextBlock Margin="8,0,0,0"
                                   Foreground="{DynamicResource TextMuted}"
                                   Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Text="{Binding BusyText}" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Margin="12,0,0,0"
                            Style="{StaticResource ActionButton}"
                            Padding="8,2"
                            Command="{Binding ToggleLogCommand}"
                            Content="{Binding LogToggleText}" />
                </Grid>

                <Border Grid.Row="2"
                        CornerRadius="8"
                        Background="{DynamicResource InputBackground}"
                        BorderBrush="{DynamicResource InputBorder}"
                        BorderThickness="1"
                        Padding="10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLogExpanded}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Foreground="{DynamicResource TextPrimary}"
                               Text="{Binding LastNotificationText}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap" />
                </Border>

                <Grid Grid.Row="4">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLogExpanded}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <WrapPanel>
                        <Button Style="{StaticResource ActionButton}"
                                Padding="8,2"
                                Command="{Binding CopyNotificationsCommand}"
                                Content="Copy" />
                        <Button Style="{StaticResource ActionButton}"
                                Padding="8,2"
                                Command="{Binding ClearNotificationsCommand}"
                                Content="Clear" />
                    </WrapPanel>

                    <Border Grid.Row="2"
                            CornerRadius="8"
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource InputBorder}"
                            BorderThickness="1"
                            Padding="8"
                            MaxHeight="240">
                        <ListBox Style="{StaticResource ReadableListBoxStyle}"
                                 ItemContainerStyle="{StaticResource ReadableListBoxItemStyle}"
                                 BorderThickness="0"
                                 ItemsSource="{Binding Notifications}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="True"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 VirtualizingPanel.ScrollUnit="Pixel">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Foreground="{DynamicResource TextMuted}" Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                                        <TextBlock Grid.Column="1" Foreground="{DynamicResource TextMuted}" Text="{Binding Level}" />
                                        <TextBlock Grid.Column="2" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap" Text="{Binding Message}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
