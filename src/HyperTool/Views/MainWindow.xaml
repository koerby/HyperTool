<mah:MetroWindow x:Class="HyperTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="980"
        Height="640"
        MinWidth="820"
        MinHeight="560"
        WindowStartupLocation="CenterScreen"
        Background="#FF111827">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="16"
                CornerRadius="10"
                Background="#FF1F2937"
                BorderThickness="1"
                BorderBrush="#FF374151">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#FFF9FAFB"
                               Text="HyperTool" />
                    <TextBlock Margin="0,6,0,0"
                               Foreground="#FFD1D5DB"
                               Text="Schritt 2: Config Loader + Beispielconfig" />
                </StackPanel>

                <Border Grid.Column="1"
                        Padding="10,6"
                        CornerRadius="6"
                        VerticalAlignment="Center"
                        Background="#FF0F766E">
                    <TextBlock Foreground="White"
                               FontWeight="SemiBold"
                               Text="{Binding StatusText}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Padding="12"
                CornerRadius="8"
                Background="#FF7C2D12"
                BorderThickness="1"
                BorderBrush="#FF9A3412"
                Visibility="{Binding HasConfigurationNotice, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Foreground="#FFFFEDD5"
                       TextWrapping="Wrap"
                       Text="{Binding ConfigurationNotice}" />
        </Border>

        <Border Grid.Row="4"
                Padding="16"
                CornerRadius="10"
                Background="#FF1F2937"
                BorderThickness="1"
                BorderBrush="#FF374151">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="VM:" />

                    <ComboBox Grid.Column="2"
                              DisplayMemberPath="Label"
                              SelectedItem="{Binding SelectedVm}"
                              ItemsSource="{Binding AvailableVms}" />

                    <StackPanel Grid.Column="3"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Foreground="#FFD1D5DB"
                                   Text="{Binding DefaultSwitchName, StringFormat=Default Switch: {0}}" />
                        <TextBlock Foreground="#FFD1D5DB"
                                   Text="{Binding VmConnectComputerName, StringFormat=vmconnect host: {0}}" />
                    </StackPanel>
                </Grid>

                <TextBlock FontSize="16"
                           Margin="0,14,0,0"
                           FontWeight="SemiBold"
                           Foreground="#FFF9FAFB"
                           Text="Quick Actions (temporär)" />

                <WrapPanel Margin="0,14,0,0"
                           HorizontalAlignment="Left"
                           ItemHeight="34"
                           ItemWidth="220">
                    <Button Margin="0,0,12,12"
                            Padding="12,8"
                            Command="{Binding StartDefaultVmCommand}"
                            Content="Start Default VM" />
                    <Button Margin="0,0,12,12"
                            Padding="12,8"
                            Command="{Binding StopDefaultVmCommand}"
                            Content="Stop Default VM" />
                    <Button Margin="0,0,12,12"
                            Padding="12,8"
                            Command="{Binding ConnectDefaultVmCommand}"
                            Content="Connect Default VM" />
                    <Button Margin="0,0,12,12"
                            Padding="12,8"
                            Command="{Binding CreateCheckpointCommand}"
                            Content="Create Checkpoint" />
                </WrapPanel>
            </StackPanel>
        </Border>

        <StatusBar Grid.Row="5"
                   Margin="0,16,0,0"
                   Background="#FF1F2937"
                   Foreground="#FFD1D5DB">
            <StatusBarItem>
                <TextBlock Text="Tray Icon aktiv · Doppelklick zeigt das Fenster" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>