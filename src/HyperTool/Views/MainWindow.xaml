<mah:MetroWindow x:Class="HyperTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Icon="/Assets/HyperTool.ico"
        Width="1240"
        Height="900"
        MinWidth="980"
        MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF0B1220">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF141B2D" />
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#FFF6FAFF" />
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF141B2D" />
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#FFF6FAFF" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF47C8FF" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FF04111E" />
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="#FF141B2D" />
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#FFF6FAFF" />
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlLightBrushKey}" Color="#FF2A3B5F" />
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlDarkBrushKey}" Color="#FF0E1525" />

        <LinearGradientBrush x:Key="WindowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF0A1328" Offset="0" />
            <GradientStop Color="#FF152A4C" Offset="1" />
        </LinearGradientBrush>

        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Background" Value="#1A263F" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#334A71" />
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFF9FAFB" />
            <Setter Property="Background" Value="#203B61" />
            <Setter Property="BorderBrush" Value="#4A78A8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="#35547F" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ModernTabItemStyle}" />
        </Style>

        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#FFDCE9FF" />
            <Setter Property="Background" Value="#172742" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="BorderBrush" Value="#35547F" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF47C8FF" />
                    <Setter Property="Foreground" Value="#FF04111E" />
                    <Setter Property="BorderBrush" Value="#FF47C8FF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#FFF7FAFF" />
            <Setter Property="Background" Value="#141B2D" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#305A86" />
                    <Setter Property="Foreground" Value="#FFFFFFFF" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#47C8FF" />
                    <Setter Property="Foreground" Value="#04111E" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#FFF9FAFB" />
            <Setter Property="Background" Value="#141B2D" />
            <Setter Property="BorderBrush" Value="#4A78A8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ModernComboBoxItemStyle}" />
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#FFF9FAFB" />
            <Setter Property="Background" Value="#141B2D" />
            <Setter Property="BorderBrush" Value="#4A78A8" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
            <Setter Property="Foreground" Value="#FFF9FAFB" />
            <Setter Property="Background" Value="#141B2D" />
            <Setter Property="BorderBrush" Value="#35547F" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ModernListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="#FFF9FAFB" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#305A86" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF47C8FF" />
                    <Setter Property="Foreground" Value="#FF04111E" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFE6EEFF" />
            <Setter Property="BorderBrush" Value="#3C5D8A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFE6EEFF" />
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20" Background="{StaticResource WindowGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="16"
            Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#FFF9FAFB"
                               Text="HyperTool" />
                    <TextBlock Margin="0,6,0,0"
                               Foreground="#FFD1D5DB"
                               FontSize="12"
                               Text="dein nÃ¼tzlicher Hyper V Helfer" />
                </StackPanel>

                <Border Grid.Column="1"
                        Padding="10,6"
                        CornerRadius="6"
                        VerticalAlignment="Center"
                    Background="#FF35B7FF">
                    <TextBlock Foreground="White"
                               FontWeight="SemiBold"
                               Text="{Binding StatusText}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Padding="12"
                CornerRadius="8"
                Background="#FF7C2D12"
                BorderThickness="1"
                BorderBrush="#FF9A3412"
                Visibility="{Binding HasConfigurationNotice, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Foreground="#FFFFEDD5"
                       TextWrapping="Wrap"
                       Text="{Binding ConfigurationNotice}" />
        </Border>

        <Border Grid.Row="4"
                Padding="16"
            Style="{StaticResource CardBorder}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="290" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="VM:" />

                    <ComboBox Grid.Column="2"
                              Style="{StaticResource ModernComboBoxStyle}"
                              DisplayMemberPath="Label"
                              SelectedItem="{Binding SelectedVm}"
                              ItemsSource="{Binding AvailableVms}" />

                    <TextBlock Grid.Column="4"
                               VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="State" />

                    <TextBlock Grid.Column="6"
                               VerticalAlignment="Center"
                               Foreground="#FFD1D5DB"
                               Text="{Binding SelectedVmState}" />

                    <TextBlock Grid.Column="8"
                               VerticalAlignment="Center"
                               Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="Switch" />

                    <TextBlock Grid.Column="10"
                               VerticalAlignment="Center"
                               Foreground="#FFD1D5DB"
                               Text="{Binding SelectedVmCurrentSwitch}" />
                </Grid>

                <TabControl Margin="0,14,0,0" Style="{StaticResource ModernTabControlStyle}">
                    <TabItem Header="Start/Console">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="14" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                                <Button Grid.Row="0" Grid.Column="0"
                                        Style="{StaticResource ModernButton}"
                                    Command="{Binding StartSelectedVmCommand}"
                                        Content="â–¶ Start VM" />
                                <Button Grid.Row="0" Grid.Column="1"
                                        Style="{StaticResource ModernButton}"
                                    Command="{Binding StopSelectedVmCommand}"
                                        Content="â–  Stop VM (graceful)" />
                                <Button Grid.Row="0" Grid.Column="2"
                                        Style="{StaticResource ModernButton}"
                                    Margin="0"
                                    Command="{Binding TurnOffSelectedVmCommand}"
                                        Content="â» Turn Off (hard)" />

                                <Button Grid.Row="2" Grid.Column="0"
                                        Style="{StaticResource ModernButton}"
                                    Command="{Binding RestartSelectedVmCommand}"
                                        Content="â†» Restart VM" />
                                <Button Grid.Row="2" Grid.Column="1"
                                        Style="{StaticResource ModernButton}"
                                    Command="{Binding OpenConsoleCommand}"
                                        Content="ðŸ–¥ Open Console" />
                                <Button Grid.Row="2" Grid.Column="2"
                                        Style="{StaticResource ModernButton}"
                                    Margin="0"
                                    Command="{Binding RefreshVmStatusCommand}"
                                        Content="âŸ³ Refresh Status" />
                        </Grid>
                    </TabItem>

                    <TabItem Header="Network">
                        <StackPanel Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Foreground="#FFF9FAFB"
                                           FontWeight="SemiBold"
                                           Text="Switch:" />

                                <ComboBox Grid.Column="1"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          Margin="8,0"
                                          DisplayMemberPath="Name"
                                          SelectedItem="{Binding SelectedSwitch}"
                                          ItemsSource="{Binding AvailableSwitches}" />

                                <Button Grid.Column="2"
                                    Style="{StaticResource ModernButton}"
                                    Margin="0"
                                        Command="{Binding LoadSwitchesCommand}"
                                    Content="âŸ³ Refresh Switches" />
                            </Grid>

                            <WrapPanel Margin="0,14,0,0">
                                <Button Margin="0,0,12,12"
                                    Style="{StaticResource ModernButton}"
                                        Command="{Binding ConnectSelectedSwitchCommand}"
                                    Content="ðŸ”Œ Connect to Switch" />
                                <Button Margin="0,0,12,12"
                                    Style="{StaticResource ModernButton}"
                                        Command="{Binding DisconnectSwitchCommand}"
                                    Content="â›” Disconnect" />
                                <Button Margin="0,0,12,12"
                                    Style="{StaticResource ModernButton}"
                                        Command="{Binding ConnectDefaultVmCommand}"
                                    Content="âš¡ Connect Default Switch" />
                            </WrapPanel>

                            <TextBlock Foreground="#FFD1D5DB"
                                       Text="{Binding DefaultSwitchName, StringFormat=Default Switch: {0}}" />
                            <TextBlock Foreground="#FFD1D5DB"
                                       Text="{Binding VmConnectComputerName, StringFormat=vmconnect host: {0}}" />
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Snapshots">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ListBox Grid.Row="0"
                                     Style="{StaticResource ModernListBoxStyle}"
                                     SelectedItem="{Binding SelectedCheckpoint}"
                                     ItemsSource="{Binding AvailableCheckpoints}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="170" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Foreground="#FFF9FAFB"
                                                       Text="{Binding Name}" />
                                            <TextBlock Grid.Column="1"
                                                       Foreground="#FFD1D5DB"
                                                       Text="{Binding Created, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                            <TextBlock Grid.Column="2"
                                                       Foreground="#FFD1D5DB"
                                                       Text="{Binding Type}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Foreground="#FFF9FAFB"
                                               FontWeight="SemiBold"
                                               Text="Checkpoint Name" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding NewCheckpointName, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="3"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0"
                                            Padding="12,8"
                                            Command="{Binding CreateCheckpointCommand}"
                                            Content="ðŸ“¸ Create Checkpoint" />
                                </Grid>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Foreground="#FFF9FAFB"
                                               FontWeight="SemiBold"
                                               Text="Beschreibung (optional)" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding NewCheckpointDescription, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="3"
                                            Style="{StaticResource ModernButton}"
                                            Padding="12,8"
                                            Command="{Binding ApplyCheckpointCommand}"
                                            Content="âœ… Apply Checkpoint" />
                                    <Button Grid.Column="5"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0"
                                            Padding="12,8"
                                            Command="{Binding DeleteCheckpointCommand}"
                                            Content="ðŸ—‘ Delete Checkpoint" />
                                </Grid>

                                <WrapPanel Margin="0,10,0,0">
                                    <Button Margin="0,0,12,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="12,8"
                                            Command="{Binding LoadCheckpointsCommand}"
                                            Content="âŸ³ Refresh Checkpoints" />
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Config">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Foreground="#FFF9FAFB"
                                           FontWeight="SemiBold"
                                           Text="Default VM" />
                                    <ComboBox Grid.Column="1"
                                              Style="{StaticResource ModernComboBoxStyle}"
                                          DisplayMemberPath="Label"
                                          ItemsSource="{Binding AvailableVms}"
                                          SelectedItem="{Binding SelectedDefaultVmForConfig}" />
                                    <Button Grid.Column="3"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0"
                                        Padding="12,8"
                                        Command="{Binding SetDefaultVmCommand}"
                                            Content="â­ Setze Default" />
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>

                                    <ListBox Grid.Column="0"
                                             Style="{StaticResource ModernListBoxStyle}"
                                             SelectedItem="{Binding SelectedVmForConfig}"
                                             ItemsSource="{Binding AvailableVms}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2,0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="220" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Foreground="#FFF9FAFB" Text="{Binding Name}" />
                                                    <TextBlock Grid.Column="1" Foreground="#FFD1D5DB" Text="{Binding Label}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <StackPanel Grid.Column="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FFF9FAFB"
                                                   FontWeight="SemiBold"
                                                   Text="Neue VM Name" />
                                        <TextBox Grid.Column="1"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Text="{Binding NewVmName, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FFF9FAFB"
                                                   FontWeight="SemiBold"
                                                   Text="Label" />
                                        <TextBox Grid.Column="1"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Text="{Binding NewVmLabel, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>

                                    <WrapPanel Margin="0,12,0,0">
                                        <Button Margin="0,0,12,0"
                                            Style="{StaticResource ModernButton}"
                                                Padding="12,8"
                                                Command="{Binding AddVmCommand}"
                                            Content="ï¼‹ VM hinzufÃ¼gen" />
                                        <Button Margin="0,0,12,0"
                                            Style="{StaticResource ModernButton}"
                                                Padding="12,8"
                                                Command="{Binding RemoveVmCommand}"
                                            Content="ï¼ Auswahl entfernen" />
                                    </WrapPanel>

                                        <GroupBox Margin="0,14,0,0" Header="HNS">
                                            <StackPanel Margin="8">
                                                <CheckBox Margin="0,0,0,6"
                                                          IsChecked="{Binding HnsEnabled}"
                                                          Content="HNS-Flow aktivieren" />
                                                <CheckBox Margin="0,0,0,6"
                                                          IsChecked="{Binding HnsAutoRestartAfterDefaultSwitch}"
                                                          Content="Auto-Restart nach Default-Switch Connect" />
                                                <CheckBox Margin="0,0,0,10"
                                                          IsChecked="{Binding HnsAutoRestartAfterAnyConnect}"
                                                          Content="Auto-Restart nach jedem Connect" />
                                                <Button Padding="12,8"
                                                    Style="{StaticResource ModernButton}"
                                                    Margin="0"
                                                        Command="{Binding RestartHnsCommand}"
                                                    Content="âš™ HNS jetzt neu starten (UAC)" />
                                            </StackPanel>
                                        </GroupBox>

                                        <GroupBox Margin="0,14,0,0" Header="System">
                                            <StackPanel Margin="8">
                                                <CheckBox Margin="0,0,0,8"
                                                          IsChecked="{Binding UiEnableTrayIcon}"
                                                          Content="Tasktray-Icon aktiv" />
                                                <CheckBox Margin="0,0,0,8"
                                                          IsChecked="{Binding UiStartWithWindows}"
                                                          Content="Mit Windows starten" />
                                            </StackPanel>
                                        </GroupBox>

                                        <GroupBox Margin="0,14,0,0" Header="Updates">
                                            <StackPanel Margin="8">
                                                <CheckBox Margin="0,0,0,8"
                                                          IsChecked="{Binding UpdateCheckOnStartup}"
                                                          Content="Beim Start auf Updates prÃ¼fen" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="#FFF9FAFB" Text="GitHub Owner" />
                                                    <TextBox Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Text="{Binding GithubOwner, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="#FFF9FAFB" Text="GitHub Repo" />
                                                    <TextBox Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Text="{Binding GithubRepo, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </Grid>

                                <WrapPanel Grid.Row="4">
                                    <Button Margin="0,0,12,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="12,8"
                                            Command="{Binding SaveConfigCommand}"
                                            Content="ðŸ’¾ Config speichern" />
                                    <Button Margin="0,0,12,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="12,8"
                                            Command="{Binding ReloadConfigCommand}"
                                            Content="âŸ³ Neu laden" />
                                    <TextBlock VerticalAlignment="Center"
                                               Foreground="#FFD1D5DB"
                                               Text="Standarddatei: HyperTool.config.json" />
                                </WrapPanel>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Info">
                        <StackPanel Margin="12">
                            <TextBlock Foreground="#FFF9FAFB" FontSize="18" FontWeight="SemiBold" Text="HyperTool" />
                            <TextBlock Margin="0,4,0,0" Foreground="#FFD1D5DB" Text="dein nÃ¼tzlicher Hyper V Helfer" />
                            <TextBlock Margin="0,12,0,0" Foreground="#FFD1D5DB" Text="{Binding AppVersion, StringFormat=Version: {0}}" />
                            <TextBlock Margin="0,6,0,12" Foreground="#FFD1D5DB" Text="{Binding UpdateStatus, StringFormat=Update-Status: {0}}" TextWrapping="Wrap" />

                            <WrapPanel>
                                <Button Margin="0,0,12,0"
                                    Style="{StaticResource ModernButton}"
                                        Padding="12,8"
                                        Command="{Binding CheckForUpdatesCommand}"
                                    Content="ðŸ›° Jetzt auf Updates prÃ¼fen" />
                                <Button Margin="0,0,12,0"
                                    Style="{StaticResource ModernButton}"
                                        Padding="12,8"
                                        Command="{Binding OpenReleasePageCommand}"
                                    Content="ðŸŒ Release-Seite Ã¶ffnen" />
                            </WrapPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>

        <Border Grid.Row="6"
                Padding="12"
            Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#FFF9FAFB"
                               FontWeight="SemiBold"
                               Text="Notifications" />
                    <TextBlock Margin="10,0,0,0"
                               Foreground="#FFD1D5DB"
                               Text="(non-blocking)" />
                    <mah:ProgressRing Margin="16,0,0,0"
                                      Width="16"
                                      Height="16"
                                      IsActive="{Binding IsBusy}"
                                      Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Margin="8,0,0,0"
                               Foreground="#FFD1D5DB"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding BusyText}" />
                </StackPanel>

                <ListBox Grid.Row="2"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding Notifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="#FF9CA3AF"
                                           Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                                <TextBlock Grid.Column="1"
                                           Foreground="#FFD1D5DB"
                                           Text="{Binding Level}" />
                                <TextBlock Grid.Column="2"
                                           Foreground="#FFF9FAFB"
                                           TextWrapping="Wrap"
                                           Text="{Binding Message}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StatusBar Grid.Row="8"
                   Margin="0,16,0,0"
                   Background="#FF1F2937"
                   Foreground="#FFD1D5DB">
            <StatusBarItem>
                <TextBlock Text="Tray Icon aktiv Â· Doppelklick zeigt das Fenster Â· Schritt 6 aktiv" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
