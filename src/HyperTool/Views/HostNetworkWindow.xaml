<mah:MetroWindow x:Class="HyperTool.Views.HostNetworkWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Host Network"
                 Width="1060"
                 Height="640"
                 MinWidth="900"
                 MinHeight="500"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize"
                 Background="{DynamicResource PageBackground}">
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>

    <Grid Margin="12" Background="{DynamicResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Foreground="{DynamicResource TextPrimary}" FontSize="20" FontWeight="SemiBold" Text="Host Netzwerkkarten" />
            <TextBlock Margin="0,4,0,0"
                       Foreground="{DynamicResource TextMuted}"
                       Text="Es werden alle gefundenen Host-Adapter angezeigt." />
            <TextBlock Margin="0,2,0,0"
                       Foreground="{DynamicResource TextMuted}"
                       Text="{Binding AdapterCountText}" />
        </StackPanel>

        <Border Grid.Row="2"
                CornerRadius="10"
                Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource PanelBorder}"
                BorderThickness="1"
                Padding="8">
            <ListView ItemsSource="{Binding Adapters}"
                      Foreground="{DynamicResource TextPrimary}"
                      Background="{DynamicResource InputBackground}"
                      BorderBrush="{DynamicResource InputBorder}"
                      BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Adapter" Width="180">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center" Text="{Binding AdapterName}" />
                                        <Border Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                Padding="6,1"
                                                CornerRadius="8"
                                                Background="{DynamicResource VmChipRunningBackground}"
                                                BorderBrush="{DynamicResource VmChipRunningBorder}"
                                                BorderThickness="1"
                                                Visibility="{Binding HasGateway, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Foreground="{DynamicResource TextPrimary}" FontSize="10" FontWeight="SemiBold" Text="Gateway" />
                                        </Border>
                                        <Border Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                Padding="6,1"
                                                CornerRadius="8"
                                                Background="{DynamicResource Accent}"
                                                Visibility="{Binding IsDefaultSwitch, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Foreground="{DynamicResource AccentText}" FontSize="10" FontWeight="SemiBold" Text="Default Switch" />
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Beschreibung" Width="190" DisplayMemberBinding="{Binding InterfaceDescription}" />
                        <GridViewColumn Header="IP" Width="150" DisplayMemberBinding="{Binding IpAddresses}" />
                        <GridViewColumn Header="Subnetz" Width="88" DisplayMemberBinding="{Binding Subnets}" />
                        <GridViewColumn Header="Gateway" Width="120" DisplayMemberBinding="{Binding Gateway}" />
                        <GridViewColumn Header="DNS" Width="170" DisplayMemberBinding="{Binding DnsServers}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Right">
            <Button Padding="12,6" Click="CloseButton_Click" Content="SchlieÃŸen" />
        </WrapPanel>
    </Grid>
</mah:MetroWindow>
